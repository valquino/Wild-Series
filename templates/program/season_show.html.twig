{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <h1>Saison {{ season.number }} de {{ program.title }}</h1>
    <hr />
    <div class="media">
        <div class="media-body">
            <p>{{ season.description }}</p>
            <div>
                <p>Liste des épisodes</p>
                <ul>
                    {% for episode in episodes %}
                        <li>
                            {{ episode.title }}
                            <p>{{ episode.synopsis }}</p>
                        </li>
                    {% else %}
                        <div class="alert alert-warning center">Aucun épisode n'a été trouvé pour cette saison</div>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <a href="{{ path("program_show", { id: program.id }) }}">
        Retour à la liste des saisons
    </a>
{% endblock %}